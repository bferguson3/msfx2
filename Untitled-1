fname "hw.com"
;
; Hello World .COM for MSX-DOS environment
;
; Compile:
;    java -jar glass.jar hellocom.asm hellocom.com
; Load from MSX-DOS with:
;    HELLOCOM
;
; Constant definitions
BDOS: equ 05H
_STROUT: equ 09H

; Compilation address, standard MSX-DOS entry point
	org 100H

; Program code entry point
Execute:
    ;ld a, $0d
    ;ld [1000H], a
    ;ld a, $0a 
    ;ld [1001H], a  
    ld a, 8 
    ld [1002H], a 
    ; 1003 has num char sent 
    ; 1004 has str 
    ld a, "$"
    ld [100AH], a 

	ld de,helloWorld
	ld c,_STROUT
	call BDOS

    ld de, stringtest
    ld c, 0AH
    call BDOS
    
    ld de, newLine 
    ld c,_STROUT 
    call BDOS 

    ld de, stringtest+2
    ld c,_STROUT
    call BDOS

	ret

; Data
helloWorld:
	db "Input 5 chr:$"
newLine:
    db $0d, $0a, $24

stringtest: EQU 1002H